{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "./build",
    "baseUrl": "./src",
    "noImplicitReturns": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "ts-node": {
    "esm": true
  },
  "lib": [
    "es2016",
    "dom"
  ]
}
